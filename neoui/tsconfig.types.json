{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib/typescript",
    "rootDir": "./src",
    "noEmit": false,
    "emitDeclarationOnly": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/__tests__/**/*",
    "**/__mocks__/**/*",
    "example",
    "node_modules"
  ]
}
